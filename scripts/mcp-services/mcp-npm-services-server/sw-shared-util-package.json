{
  "name": "@sagasweave/mcp-npm-services-server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "MCP server for npm services integration - automatically discovers and exposes all npm scripts except tests",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mcp-npm-services-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "start:daemon": "node dist/daemon.js",
    "test": "vitest"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "keywords": ["mcp", "model-context-protocol", "npm", "services", "scripts", "sagasweave"]
}
